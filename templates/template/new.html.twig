{% extends "core/base.html.twig" %}

{% block stylesheets %}
    {{ encore_entry_link_tags('template') }}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('template') }}
{% endblock %}
{% block body %}

    <div class="animated fadeIn">
        <div class="card">
            <div class="card-header"><i class="icon-layers"></i> Nueva Plantilla
            </div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="card">
                    <div class="card-header bg-gray-300">
                        General
                    </div>
                    <div class="card-body">
                        {{ form_row(form.name) }}
                        {{ form_row(form.owner) }}
                        {{ form_row(form.group) }}
                        {{ form_row(form.type) }}
                        <div class="row">
                            <div class="form-group col">
                                {{ form_label(form.ownerPermissions) }}
                                {{ form_widget(form.ownerPermissions) }}
                            </div>
                            <div class="form-group col">
                                {{ form_label(form.groupPermissions) }}
                                {{ form_widget(form.groupPermissions) }}
                            </div>
                            <div class="form-group col">
                                {{ form_label(form.otherPermissions) }}
                                {{ form_widget(form.otherPermissions) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card" id="form-fields">
                    <div class="card-header bg-gray-300">
                        Campos
                    </div>
                    <div class="card-body">
                        {% form_theme form.templateForm 'jquery.collection.html.twig'%}
                        {{ form_widget(form.templateForm) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
{% endblock %}