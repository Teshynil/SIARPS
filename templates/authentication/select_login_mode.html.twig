<!DOCTYPE html>
<html lang="es">
    <head>
        <base href="./">
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
        <title>Iniciar sesion</title>
        {{ encore_entry_link_tags('app') }}
    </head>
    <body class="app flex-row align-items-center">
        {{ encore_entry_script_tags('app') }}
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-8 col-sm-10 col-lg-6 col-xl-5">
                    {{ form_start(form,{'attr':{'class':'container-fluid'}}) }}
                    <div class="card-group">
                        <div class="card p-4">
                            <div class="card-body">
                                <h1>SIARPS</h1>
                                <p class="text-muted">Selecciona tu modo de usuario</p>
                                <div class="row mt-3">
                                    <div class="col-sm-6">
                                        {{ form_widget(form.modoUsuario,{'attr':
                                        {'class':'btn btn-square btn-block btn-success btn-lg',
                                        'style':'white-space:normal;padding: 0;height:10em'
                                        }}) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.modoAdministrador,{'attr':
                                        {'class':'btn btn-square btn-block btn-warning btn-lg',
                                        'style':'white-space:normal;padding: 0;height:10em'
                                        }}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </body>
</html>