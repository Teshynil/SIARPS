<html lang="es">
    <head>
        <base href="./">
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
        <title>Iniciar sesion</title>
        {{ encore_entry_link_tags('app') }}
    </head>
    <body class="app flex-row align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form method="post" class="container">
                        <div class="card-group">
                            <div class="card p-4">
                                <div class="card-body">
                                    <h1>SIARPS</h1>
                                    <p class="text-muted">Inicio de sesión</p>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="icon-user"></i></span></div>
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Usuario" required autofocus>
                                    </div>
                                    <div class="input-group mb-4">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="icon-lock"></i></span></div>
                                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contraseña" required>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-9 col-form-label">Mantener abierta mi sesion</label>
                                        <div class="col-md-3">
                                            <label class="switch switch-sm switch-3d switch-primary mt-2 mb-0">
                                                <input class="switch-input" type="checkbox" name="_remember_me"/><span class="switch-slider"></span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <button class="btn btn-primary px-4" type="submit">Entrar</button>
                                        </div>
                                        <div class="col-6 text-right">
                                            <button class="btn btn-link px-0" type="button">Olvidaste tu contraseña?</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% if false %}
                                <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                                    <div class="card-body text-center">
                                        <div>
                                            <h2>No tienes cuenta?</h2>
                                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                            <button class="btn btn-primary active mt-3" type="button">Register Now!</button>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                                   >
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>