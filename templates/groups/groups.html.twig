{% block body %}

    <div class="animated fadeIn">
        <div class="card">
            <div class="card-header">
                <nav class="breadcrumb h4">
                    <span class="breadcrumb-item active">Grupos</span>
                </nav>
                {% if app.user.adminMode %}
                    <div class="card-header-actions">
                        <a class="btn btn-pill btn-success" href="{{ path('group-new') }}"><i class="fa fa-plus"></i>&nbsp;AÃ±adir un Grupo</a>
                    </div>
                {% endif %}
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered datatable">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                        <tr>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for group in groups %}
                            <tr>
                                <td>{{ group.name }}</td>
                                <td>{{ group.description }}</td>
                                <td>
                                    <a class="btn btn-info" href="{{ path('group',{'id':group.id}) }}"><i class="fas fa-eye"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}