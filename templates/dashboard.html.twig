{% extends "core/base.html.twig" %}

{% block stylesheets %}
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('charts_app') }}
{% endblock %}
{% block body %}

    <div class="animated fadeIn">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">Proyectos</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col-4 col-sm-4">
                                        <div class="callout callout-success"><small class="text-muted">Proyectos Realizados</small><br /><strong class="h4">{{ proyects.done??"400" }}</strong>
                                            <div class="chart-wrapper">
                                                <canvas id="sparkline-chart-1" width="100" height="30"></canvas>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-4 col-sm-4">
                                        <div class="callout callout-warning"><small class="text-muted">Proyectos En proceso</small><br /><strong class="h4">{{ proyects.now??"100" }}</strong>
                                            <div class="chart-wrapper">
                                                <canvas id="sparkline-chart-2" width="100" height="30"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-4 col-sm-4">
                                        <div class="callout callout-danger"><small class="text-muted">Proyectos Retrasados</small><br /><strong class="h4">{{ proyects.late??"100" }}</strong>
                                            <div class="chart-wrapper">
                                                <canvas id="sparkline-chart-3" width="100" height="30"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr class="mt-0" />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div id="accordion" role="tablist">
                                            <div class="card mb-1">
                                                <div class="card-header" id="headingOne" role="tab" data-toggle="collapse" data-target="#collapseOne" >
                                                    <div class="progress-group mb-0">
                                                        <div class="card-header-actions mr-2 align-self-center">
                                                            <a class="card-header-action btn-minimize"><i class="fas fa-lg fa-plus-circle"></i></a>
                                                        </div>
                                                        <div class="progress-group-prepend"><span class="progress-group-text">Equipo 1</span></div>
                                                        <div class="progress-group-bars">
                                                            <div class="row">
                                                                <div class="col-4 col-sm-4 pl-0 pr-0 pl-sm-1 pr-sm-1">
                                                                    <div class="callout callout-success mt-0 mb-0 pl-1 pr-1 pl-sm-3 pr-sm-3"><small class="text-muted">Proyectos Realizados</small><br /><strong class="h6">{{ proyects.done??"38" }}</strong>
                                                                        <div class="chart-wrapper">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-4 col-sm-4 pl-0 pr-0 pl-sm-1 pr-sm-1">
                                                                    <div class="callout callout-warning mt-0 mb-0 pl-1 pr-1 pl-sm-3 pr-sm-3"><small class="text-muted">Proyectos En proceso</small><br /><strong class="h6">{{ proyects.now??"10" }}</strong>
                                                                        <div class="chart-wrapper">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-4 col-sm-4 pl-0 pr-0 pl-sm-1 pr-sm-1">
                                                                    <div class="callout callout-danger mt-0 mb-0 pl-1 pr-1 pl-sm-3 pr-sm-3"><small class="text-muted">Proyectos Retrasados</small><br /><strong class="h6">{{ proyects.late??"3" }}</strong>
                                                                        <div class="chart-wrapper">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="collapseOne" class="collapse" aria-labelledby="headingOne" role="tabpanel" data-parent="#accordion">
                                                    <div class="card-body">
                                                        <div class="text-center"><span class="h6">Ultimo avance reportado</span></div>
                                                        <hr class="mt-0 mb-2"/>
                                                        <a class="btn btn-square btn-block btn-ghost-secondary text-left text-body m-0 p-0" href="#"><div class="progress-group m-0 p-1">
                                                                <div class="progress-group-prepend"><span class="progress-group-text">Proyecto 1</span></div>
                                                                <div class="progress-group-bars">
                                                                    <div class="progress progress-xs">
                                                                        <div class="progress-bar bg-info" role="progressbar" style="width: 57%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100"></div>
                                                                    </div>
                                                                </div>
                                                                <div class="ml-2"><span class="h6">57%</span></div>
                                                            </div>
                                                        </a>
                                                        <a class="btn btn-square btn-block btn-ghost-secondary text-left text-body m-0 p-0" href="#"><div class="progress-group m-0 p-1">
                                                                <div class="progress-group-prepend"><span class="progress-group-text">Proyecto 2</span></div>
                                                                <div class="progress-group-bars">
                                                                    <div class="progress progress-xs">
                                                                        <div class="progress-bar bg-warning" role="progressbar" style="width: 38%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100"></div>
                                                                    </div>
                                                                </div>
                                                                <div class="ml-2"><span class="h6">38%</span></div>
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="card mb-1">
                                                <div class="card-header" id="heading2" role="tab" data-toggle="collapse" data-target="#collapse2">
                                                    <div class="progress-group mb-0">
                                                        <div class="card-header-actions mr-2 align-self-center">
                                                            <a class="card-header-action btn-minimize"><i class="fas fa-lg fa-plus-circle"></i></a>
                                                        </div>
                                                        <div class="progress-group-prepend"><span class="progress-group-text">Equipo 2</span></div>
                                                        <div class="progress-group-bars">
                                                            <div class="row">
                                                                <div class="col-4 col-sm-4 pl-0 pr-0 pl-sm-1 pr-sm-1">
                                                                    <div class="callout callout-success mt-0 mb-0 pl-1 pr-1 pl-sm-3 pr-sm-3"><small class="text-muted">Proyectos Realizados</small><br /><strong class="h6">{{ proyects.done??"15" }}</strong>
                                                                        <div class="chart-wrapper">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-4 col-sm-4 pl-0 pr-0 pl-sm-1 pr-sm-1">
                                                                    <div class="callout callout-warning mt-0 mb-0 pl-1 pr-1 pl-sm-3 pr-sm-3"><small class="text-muted">Proyectos En proceso</small><br /><strong class="h6">{{ proyects.now??"5" }}</strong>
                                                                        <div class="chart-wrapper">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-4 col-sm-4 pl-0 pr-0 pl-sm-1 pr-sm-1">
                                                                    <div class="callout callout-danger mt-0 mb-0 pl-1 pr-1 pl-sm-3 pr-sm-3"><small class="text-muted">Proyectos Retrasados</small><br /><strong class="h6">{{ proyects.late??"1" }}</strong>
                                                                        <div class="chart-wrapper">
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="collapse2" class="collapse" aria-labelledby="headingTwo" role="tabpanel" data-parent="#accordion">
                                                    <div class="card-body">
                                                        <div class="text-center"><span class="h6">Ultimo avance reportado</span></div>
                                                        <hr class="mt-0 mb-2"/>
                                                        <a class="btn btn-square btn-block btn-ghost-secondary text-left text-body m-0 p-0" href="#">
                                                            <div class="progress-group m-0 p-1">
                                                                <div class="progress-group-prepend"><span class="progress-group-text">Proyecto 1</span></div>
                                                                <div class="progress-group-bars">
                                                                    <div class="progress progress-xs">
                                                                        <div class="progress-bar bg-info" role="progressbar" style="width: 12%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100"></div>
                                                                    </div>
                                                                </div>
                                                                <div class="ml-2"><span class="h6">12%</span></div>
                                                            </div>
                                                        </a>
                                                        <a class="btn btn-square btn-block btn-ghost-secondary text-left text-body m-0 p-0" href="#"><div class="progress-group m-0 p-1">
                                                                <div class="progress-group-prepend"><span class="progress-group-text">Proyecto 2</span></div>
                                                                <div class="progress-group-bars">
                                                                    <div class="progress progress-xs">
                                                                        <div class="progress-bar bg-warning" role="progressbar" style="width: 13%" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100"></div>
                                                                    </div>
                                                                </div>
                                                                <div class="ml-2"><span class="h6">13%</span></div>
                                                            </div>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col-->
            </div>
            <!-- /.row-->
        </div>
    {% endblock %}